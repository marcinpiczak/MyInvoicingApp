@model MyInvoicingApp.ViewModels.RoleViewModel

<h2 class="text-center">Edycja stanowiska: <b>@Model.Position</b></h2>

<hr />
<div class="row">
    <div class="col-md-4 border rounded mx-auto">
        <form asp-action="Edit" asp-controller="Role" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*<label asp-for="Id" class="control-label"></label>*@
                <input asp-for="Id" class="form-control" />
                @*<span asp-validation-for="Id" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="Position" class="control-label"></label>
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="btn-group special" role="group">
                    <input type="submit" value="Zapisz" class="btn btn-success" />
                    <a asp-action="Index" asp-controller="Role" class="btn btn-outline-primary">Anuluj</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
