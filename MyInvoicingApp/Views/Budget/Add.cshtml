@model MyInvoicingApp.ViewModels.BudgetViewModel

<h2 class="text-center">Dodawanie nowego budżetu</h2>

<hr />
<div class="row">
    <div class="col-md-6 border rounded mx-auto">
        <form id="budget-add-form" asp-action="Add" asp-controller="Budget" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*<label asp-for="BudgetNumber" class="control-label"></label>*@
                <input asp-for="BudgetNumber" value="TEMP" type="hidden" class="form-control" readonly />
                @*<span asp-validation-for="BudgetNumber" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CommitedAmount" class="control-label"></label>
                <input asp-for="CommitedAmount" asp-format="#,##" class="form-control" />
                <span asp-validation-for="CommitedAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="btn-group special" role="group">
                    <input type="submit" value="Dodaj" class="btn btn-success" />
                    <a asp-action="Index" asp-controller="Budget" class="btn btn-outline-primary">Anuluj</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/Budget/BudgetAdd.js" asp-append-version="true"></script>
}
